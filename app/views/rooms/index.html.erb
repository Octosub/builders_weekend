<%= link_to "Create a new room", new_room_path %>

<h1>Rooms</h1>
<hr>
<% @rooms.each do |room| %>
  <h2>Name:</h2>
  <%= link_to room_path(room) do %>
    <p><%= room.name %></p>
  <% end %>
  <br>
  <h2>Description:</h2>
  <p><%= room.description %></p>
  <br>
  <p>Images:</p>
  <div class="room-image">
    <% room.photos.each do |photo| %>
       <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
  <p>url: <%= room.url %></p>
  <hr>
<% end %>
